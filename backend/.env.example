# XRPL Configuration
XRPL_NETWORK=testnet
XRPL_WEBSOCKET_URL=wss://s.altnet.rippletest.net:51233
XRPL_JSON_RPC_URL=https://s.altnet.rippletest.net:51234

# For production, use mainnet:
# XRPL_WEBSOCKET_URL=wss://xrplcluster.com
# XRPL_JSON_RPC_URL=https://xrplcluster.com

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Security
JWT_SECRET=your_super_secret_jwt_key_change_in_production
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.onrender.com
CORS_CREDENTIALS=true

# Asset Tokenization Defaults
DEFAULT_ASSET_PREFIX=RWA
DEFAULT_DOMAIN=example.com
ISSUER_WALLET_SECRET=your_issuer_wallet_secret_here
ISSUER_WALLET_ADDRESS=your_issuer_wallet_address_here

# Database (for production scalability - optional for now)
# DATABASE_URL=postgresql://username:password@localhost:5432/rwa_platform

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# External Services (for production features)
WEBHOOK_SECRET=your_webhook_secret_for_xumm
NOTIFICATION_EMAIL_API_KEY=your_email_service_key

# Render Deployment Settings
RENDER_EXTERNAL_URL=https://your-api-domain.onrender.com 
