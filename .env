# XRPL Network Configuration
# Change XRPL_NETWORK to switch between networks:
# TESTNET = Testing with fake XRP (safe)
# MAINNET = Production with real XRP (live)
NODE_ENV=production
XRPL_NETWORK=TESTNET

# Network URLs
XRPL_MAINNET_URL=wss://xrplcluster.com
XRPL_TESTNET_URL=wss://s.altnet.rippletest.net:51233
XRPL_DEVNET_URL=wss://s.devnet.rippletest.net:51233

# XRPL Transaction Settings
XRPL_DEFAULT_FEE=12
XRPL_MAX_FEE=100
XRPL_TRANSACTION_TIMEOUT=30

# XRPL Reserve Requirements (in drops)
XRPL_ACCOUNT_RESERVE=10000000
XRPL_OBJECT_RESERVE=2000000
XRPL_TRUSTLINE_RESERVE=2000000

# Token/IOU Default Settings
DEFAULT_CURRENCY_CODE=USD
DEFAULT_TOKEN_NAME=MyToken
DEFAULT_TOKEN_SYMBOL=MTK
DEFAULT_TOKEN_DECIMALS=6
DEFAULT_TRUSTLINE_LIMIT=1000000000

# Application Settings
APP_NAME=XRPL-Tokenization-App
APP_VERSION=1.0.0
DEBUG_MODE=false
LOG_LEVEL=info

# API Configuration
API_PORT=3001

# Frontend Configuration
# Update this when you deploy to production
FRONTEND_URL=https://your-app-name.onrender.com

# Local development frontend (for testing)
LOCAL_FRONTEND_URL=http://localhost:3000

# Security Settings (DO NOT include sensitive keys here)
WALLET_PBKDF2_ITERATIONS=100000
WALLET_SALT_LENGTH=32
WALLET_IV_LENGTH=16

# IPFS Configuration (optional)
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# QUICK SWITCH INSTRUCTIONS:
# ========================================
# 
# FOR TESTING (Safe - No real money):
# XRPL_NETWORK=TESTNET
# 
# FOR PRODUCTION (Live - Real XRP):
# XRPL_NETWORK=MAINNET
# 
# Just change XRPL_NETWORK and restart server!
# ========================================