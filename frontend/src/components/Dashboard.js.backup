      <div className="dashboard-header">
        <div className="header-content">
          <h1>Dashboard</h1>
          <p>Welcome back! Here's your portfolio overview.</p>
        </div>
        <button onClick={refreshData} className="btn btn-secondary">
          üîÑ Refresh
        </button>
      </div>

